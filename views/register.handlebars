<h1>Register</h1>
    <main>
        <p>
            Please register a new user account.
        </p>
        <form id="registration-form" action="/register" method="post" onsubmit="return checkRegister()">
            <label for="firstNameInput">
                Please enter your first name:
                <br>
                <input type=text name="firstNameInput" id="firstNameInput" value = {{data.firstNameInput}}>
            </label>
            <br>
            <label for="lastNameInput">
                Please enter your last name:
                <br>
                <input type=text name="lastNameInput" id="lastNameInput" value = {{data.lastNameInput}}>
            </label>
            <br>
            <label for="emailAddressInput">
                Please enter your email address:
                <br>
                <input type=email name="emailAddressInput" id="emailAddressInput" value = {{data.emailAddressInput}}>
            </label>
            <br>
            <label for="userNameInput">
                Please enter your user name:
                <br>
                <input type=text name="userNameInput" id="userNameInput" value = {{data.userNameInput}}>
            </label>
            <br>
            <label for="dateOfBirthInput">
                Please enter your date of birth:
                <br>
                <input type=date name="dateOfBirthInput" id="dateOfBirthInput" value = {{data.dateOfBirthInput}}>
            </label>
            <br>
            <label for="passwordInput">
                Please enter your password:
                <br>
                <input type=password name="passwordInput" id="passwordInput">
            </label>
            <br>
            <label for="confirmPasswordInput">
                Please confirm your password:
                <br>
                <input type=password name="confirmPasswordInput" id="confirmPasswordInput">
            </label>
            <br>
            <label>
                Submit:
                <br>
                <input type="submit" value="Register!">
            </label>
        </form>
        <ul id="errorList">        
        </ul>
        <p class="error">
            {{error}}
        </p>
        <a href="/login">
            Already have an account? Click here to log-in
        </a>
    </main>
