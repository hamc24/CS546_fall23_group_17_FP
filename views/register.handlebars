<h1>Register</h1>
    <main>
        <p>
            Please register a new user account.
        </p>
        <form id="registration-form" action="/users/register" method="post">
            <label for="firstNameInput">
                Please enter your first name:
                <br>
                <input type=text name="firstNameInput" id="firstNameInput"/>
            </label>
            <br>
            <label for="lastNameInput">
                Please enter your last name:
                <br>
                <input type=text name="lastNameInput" id="lastNameInput"/>
            </label>
            <br>
            <label for="emailAddressInput">
                Please enter your email address:
                <br>
                <input type=email name="emailAddressInput" id="emailAddressInput"/>
            </label>
            <br>
            <label for="passwordInput">
                Please enter your password:
                <br>
                <input type=password name="passwordInput" id="passwordInput"/>
            </label>
            <br>
            <label for="confirmPasswordInput">
                Please confirm your password:
                <br>
                <input type=password name="confirmPasswordInput" id="confirmPasswordInput"/>
            </label>
            <br>
            <label for="roleInput">
                Please select your role:
                <br>
                <select name="roleInput" id="roleInput">
                    <option value="admin">
                        Admin
                    </option>
                    <option value="user">
                        User
                    </option>
                </select>
            </label>
            <br>
            <label>
                Submit:
                <br>
                <input type=submit value="Register!"/>
            </label>
        </form>
        <p class=error>
            {{error}}
        </p>

        {{#if hasErrors}}
        <ul class="errorList">
        {{#each errorList}}
            <li>
            <p  class="error">{{ this }}</p>
            </li>
            {{/each}}
        </ul>           
        {{/if}}
        <a href="/users/login">
            Already have an account? Click here to log-in
        </a>
    </main>
