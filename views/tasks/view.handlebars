<h1>{{title}}</h1>
<main>
  <form id="sort-form" action="/tasks/all" method="GET">
    <label for="sort-option">Sort By:</label>
    <select id="sort-option" name="sort-option">
      <option value="name">Task Name</option>
      <option value="time">Time Due</option>
      <option value="contributors">Max Amount of Contributors</option>
    </select>
    <input type="submit" id="submit" value="Submit">
  </form>
  <ul id=list>
    {{#each taskList}}
      <li>
        {{this.taskName}}
        <ul>
          <li class="name">Due: {{this.dateDue}}</li>
          <li class="date">Max Contributors: {{this.maxContributors}}</li>
          <li class="contributors">
            <a href="/tasks/{{this._id}}">
              Click here to go to this task!
            </a>
          </li>
        </ul>
      </li>
    {{/each}}
  </ul>
  <a href="/tasks/tasks">
    Click here to return to tasks!
  </a>
  <br />
  <a href="/users">
    Click here to return to users!
  </a>
  <br />
  <a href="/logout">
    Click here to logout!
  </a>

  <script src="/public/js/client-side-task-sorting.js">
  </script>
</main>
